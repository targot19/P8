<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

        <include
            layout="@layout/tablelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="232dp"
            tools:layout_editor_absoluteY="394dp"
            app:layout_constraintTop_toBottomOf="calendarView"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="208dp"
            android:layout_height="68dp"
            android:contentDescription="@string/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <GridView
            android:id="@+id/familymember"
            android:layout_width="175dp"
            android:layout_height="111dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:numColumns="auto_fit"
            android:verticalSpacing="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="122dp"
            android:layout_height="16dp"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="20dp"
            android:text="@string/tasks"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/familymember" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="122dp"
            android:layout_height="18dp"
            android:fontFamily="sans-serif-light"
            android:paddingStart="20dp"
            android:text="@string/drag_and_drop"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@id/taskview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/button2"
            android:layout_width="151dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:fontFamily="sans-serif-light"
            android:paddingStart="-1dp"
            android:text="@string/edit_family_and_tasks"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageButton" />

        <Button
            android:id="@+id/button1"
            android:layout_width="151dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:fontFamily="sans-serif-light"
            android:paddingStart="-1dp"
            android:text="@string/get_help"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/button2"
            app:layout_constraintStart_toEndOf="@+id/help" />

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/calenderView"
            android:layout_width="1047dp"
            android:layout_height="362dp"
            android:layout_marginStart="232dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="400dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.828"
            app:mcv_calendarMode="week"
            app:mcv_dateTextAppearance="@style/TextAppearance.AppCompat.Large"
            app:mcv_firstDayOfWeek="monday"
            app:mcv_tileHeight="150px"
            app:mcv_tileWidth="300px"
            app:mcv_weekDayTextAppearance="@style/TextAppearance.AppCompat.Large">

        </com.prolificinteractive.materialcalendarview.MaterialCalendarView>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="41dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:contentDescription="@string/edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <ImageButton
            android:id="@+id/help"
            android:layout_width="41dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:contentDescription="@string/get_help_img"
            app:layout_constraintBottom_toTopOf="@+id/imageButton"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:drawable/ic_menu_info_details" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/taskview"
            android:layout_width="166dp"
            android:layout_height="430dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/button1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>


