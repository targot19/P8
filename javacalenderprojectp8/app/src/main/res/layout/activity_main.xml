<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/gray"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="166dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:background="@color/gray"
        android:contentDescription="@string/logo"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <GridView
        android:id="@+id/familymember"
        android:layout_width="166dp"
        android:layout_height="111dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="166dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/white"
        android:fontFamily="sans-serif-medium"
        android:text="@string/opgaver"
        android:textColor="@color/Opgaver"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/familymember" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="166dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/white"
        android:fontFamily="sans-serif-light"
        android:text="@string/drag_and_drop"
        android:textColor="@color/Drag_and_drop"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@id/taskview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
            android:id="@+id/button3"
            android:layout_width="151dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-light"
            android:paddingStart="0dp"
            android:text="@string/edit_family_and_tasks"
            android:textAlignment="viewStart"
            android:textColor="@color/Textgray"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/edit"
            tools:ignore="RtlSymmetry" />

        <Button
            android:id="@+id/button1"
            android:layout_width="151dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-light"
            android:paddingStart="0dp"
            android:text="@string/get_help"
            android:textAlignment="viewStart"
            android:textColor="@color/Textgray"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/help"
            tools:ignore="RtlSymmetry" />

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/calenderView"
            android:layout_width="1015dp"
            android:layout_height="296dp"
            app:layout_constraintBottom_toTopOf="@+id/days"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:mcv_calendarMode="week"
            app:mcv_dateTextAppearance="@style/TextAppearance.AppCompat.Large"
            app:mcv_firstDayOfWeek="monday"
            app:mcv_tileHeight="100dp"
            app:mcv_tileWidth="140dp"
            app:mcv_weekDayTextAppearance="@style/TextAppearance.AppCompat.Large">

        </com.prolificinteractive.materialcalendarview.MaterialCalendarView>

        <ImageButton
            android:id="@+id/edit"
            android:layout_width="41dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/gray"
            android:contentDescription="@string/edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:drawable/ic_menu_edit"
            app:tint="@android:color/black" />

        <ImageButton
            android:id="@+id/help"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="41dp"
            android:layout_height="48dp"
            android:background="@color/gray"
            android:contentDescription="@string/get_help_img"
            android:scaleType="center"
            app:layout_constraintBottom_toTopOf="@+id/edit"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:drawable/ic_menu_info_details"
            app:tint="@android:color/black" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/taskview"
            android:layout_width="166dp"
            android:layout_height="430dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="36dp"
            android:paddingTop="10dp"
            android:background="@android:color/white"
            android:isScrollContainer="true"
            android:longClickable="true"
            app:layout_constraintBottom_toTopOf="@+id/button1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <LinearLayout
            android:id="@+id/days"
            android:layout_width="1016dp"
            android:layout_height="49dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/hourView"
            app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/mandag"
                    android:textAlignment="viewEnd"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/tirsdag"
                    android:textAlignment="viewEnd"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/onsdag"
                    android:textAlignment="viewEnd"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/torsdag"
                    android:textAlignment="viewEnd"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/fredag"
                    android:textAlignment="viewEnd"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/l_rdag"
                    android:textAlignment="viewEnd"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/s_ndag"
                    android:textAlignment="viewEnd"
                    android:textSize="20sp"
                    android:textStyle="bold" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hourView"
            android:layout_width="1017dp"
            android:layout_height="454dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>


