<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/gray"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="166dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:background="@color/gray"
        android:contentDescription="@string/logo"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <GridView
        android:id="@+id/familymember"
        android:layout_width="166dp"
        android:layout_height="111dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:numColumns="auto_fit"
        android:gravity="center"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="166dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:paddingStart="5dp"
        android:background="@drawable/roundstyle2"
        android:backgroundTint="@color/white"
        android:fontFamily="sans-serif-medium"
        android:text="@string/opgaver"
        android:textColor="@color/Opgaver"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/familymember"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="166dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/white"
        android:fontFamily="sans-serif-light"
        android:text="@string/drag_and_drop"
        android:textColor="@color/Drag_and_drop"
        android:textSize="12sp"
        android:paddingStart="5dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@id/taskview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="RtlSymmetry" />

        <Button
            android:id="@+id/button3"
            android:layout_width="151dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-light"
            android:text="@string/edit_family_and_tasks"
            android:paddingStart="0dp"
            android:textAlignment="viewStart"
            android:textColor="@color/Textgray"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/edit"
            tools:ignore="RtlSymmetry" />

        <Button
            android:id="@+id/button1"
            android:layout_width="151dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-light"
            android:paddingStart="0dp"
            android:text="@string/get_help"
            android:textAlignment="viewStart"
            android:textColor="@color/Textgray"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/help"
            tools:ignore="RtlSymmetry" />


    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calenderView"
        android:layout_width="1015dp"
        android:layout_height="296dp"
        app:layout_constraintBottom_toTopOf="@+id/days"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mcv_calendarMode="week"
        app:mcv_dateTextAppearance="@style/TextAppearance.AppCompat.Large"
        app:mcv_firstDayOfWeek="monday"
        app:mcv_tileHeight="100dp"
        app:mcv_tileWidth="140dp"
        app:mcv_weekDayTextAppearance="@style/TextAppearance.AppCompat.Large"
        tools:visibility="gone">

    </com.prolificinteractive.materialcalendarview.MaterialCalendarView>

    <ImageButton
        android:id="@+id/edit"
        android:layout_width="41dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/gray"
        android:contentDescription="@string/edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_menu_edit"
        app:tint="@android:color/black" />

    <ImageButton
        android:id="@+id/help"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="41dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:background="@color/gray"
        android:contentDescription="@string/get_help_img"
        android:scaleType="center"
        app:layout_constraintBottom_toTopOf="@+id/edit"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        app:tint="@android:color/black" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/taskview"
        android:layout_width="165dp"
        android:layout_height="312dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/white"
        android:isScrollContainer="true"
        android:longClickable="true"
        android:paddingTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <LinearLayout
        android:id="@+id/days"
        android:layout_width="1016dp"
        android:layout_height="49dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/hourView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calenderView">

        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Tid"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/mandag"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/tirsdag"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/onsdag"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/torsdag"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/fredag"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/l_rdag"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/s_ndag"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hourView"
        android:layout_width="1016dp"
        android:layout_height="601dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/days" />
</androidx.constraintlayout.widget.ConstraintLayout>


